{
  "build": {
    "beforeDevCommand": "npm run start",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist/bg-tray/browser"
  },
  "package": {
    "productName": "bg-tray",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "systemTray": {
      "iconAsTemplate": true,
      "iconPath": "icons/icon.png",
      "menuOnLeftClick": false
    },
    "windows": [
      {
        "title": "Background Remover",
        "width": 280,
        "height": 354,
        "resizable": false,
        "fullscreen": false,
        "transparent": true,
        "alwaysOnTop": true,
        "decorations": false,
        "hiddenTitle": true,
        "visible": false,
        "minimizable": false
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.tauri.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "macOSPrivateApi": true
  }
}
